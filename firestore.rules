rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }

    function isAdmin() {
      return isSignedIn() && request.auth.token.admin == true;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    // Users collection - only admins can read/write
    match /users/{userId} {
      allow read: if isAdmin();
      allow create: if isAdmin();
      allow update: if isAdmin();
      allow delete: if isAdmin();
    }

    // Licenses collection - admins can read/write, users can read their own
    match /licenses/{userId} {
      allow read: if isAdmin() || isOwner(userId);
      allow write: if isAdmin();
    }

    // Subscriptions collection - admins can read/write, users can read their own
    match /subscriptions/{subscriptionId} {
      allow read: if isAdmin() || (isSignedIn() && resource.data.userId == request.auth.uid);
      allow create: if isSignedIn();
      allow update: if isAdmin();
      allow delete: if isAdmin();
    }

    // Transactions collection - admins can read/write, users can read their own
    match /transactions/{transactionId} {
      allow read: if isAdmin() || (isSignedIn() && resource.data.userId == request.auth.uid);
      allow create: if isAdmin();
      allow update: if false; // Transactions are immutable
      allow delete: if isAdmin();
    }

    // Rate limits collection - system only
    match /rate_limits/{limitId} {
      allow read: if isAdmin();
      allow write: if false; // Only Cloud Functions can write
    }

    // Webhook events collection - system only
    match /webhook_events/{eventId} {
      allow read: if isAdmin();
      allow write: if false; // Only Cloud Functions can write
    }

    // Deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}