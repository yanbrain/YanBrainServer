rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // ============================================
    // HELPER FUNCTIONS
    // ============================================

    function isSignedIn() {
      return request.auth != null;
    }

    function isAdmin() {
      return isSignedIn() && request.auth.token.admin == true;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    // ============================================
    // USERS COLLECTION
    // ============================================

    match /users/{userId} {
      // Users can create their own document on signup
      allow create: if isSignedIn()
                    && request.auth.uid == userId
                    && request.resource.data.keys().hasOnly(['email', 'createdAt']);

      // Users read their own, admins read all
      allow read: if isAdmin() || isOwner(userId);

      // Only Cloud Functions/admins update
      allow update: if isAdmin();

      // Only admins delete
      allow delete: if isAdmin();
    }

    // ============================================
    // TRANSACTIONS COLLECTION
    // All credit operations recorded here
    // ============================================

    match /transactions/{transactionId} {
      // Users read their own, admins read all
      allow read: if isAdmin()
                  || (isSignedIn() && resource.data.userId == request.auth.uid);

      // Only Cloud Functions write (immutable)
      allow write: if false;
    }

    // ============================================
    // DEFAULT DENY
    // ============================================

    match /{document=**} {
      allow read, write: if false;
    }
  }
}