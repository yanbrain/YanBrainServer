{
  "name": "yanbrain-server",
  "version": "1.0.0",
  "private": true,
  "description": "",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "npm run dev --workspace=packages/admin-panel",
    "dev:website": "npm run dev --workspace=packages/website",
    "dev:functions": "npm run serve --workspace=packages/functions",
    "build": "npm run build --workspaces --if-present",
    "build:admin": "npm run build --workspace=packages/admin-panel",
    "build:website": "npm run build --workspace=packages/website",
    "deploy": "npm run build && firebase deploy",
    "deploy:admin": "npm run build:admin && firebase deploy --only hosting:yanbrain-admin",
    "deploy:website": "npm run build:website && firebase deploy --only hosting:yanbrain-main",
    "deploy:functions": "firebase deploy --only functions",
    "deploy:all": "npm run build && firebase deploy --only hosting,functions",
    "lint": "npm run lint --workspaces --if-present"
  },
  "keywords": [
    "firebase",
    "license-management",
    "saas",
    "nextjs"
  ],
  "author": "YanBrain",
  "license": "UNLICENSED"
}
