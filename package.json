{
  "name": "yanbrain-server",
  "version": "1.0.0",
  "private": true,
  "description": "",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "npm run dev:admin & npm run dev:website & npm run dev:functions",
    "dev:admin": "npm run dev --workspace=packages/admindash",
    "dev:website": "npm run dev --workspace=packages/website",
    "dev:functions": "npm run serve --workspace=packages/functions",
    "build": "npm run build --workspaces --if-present",
    "build:admin": "npm run build --workspace=packages/admindash",
    "build:website": "npm run build --workspace=packages/website",
    "deploy": "npm run build && firebase deploy",
    "deploy:admin": "npm run build:admin && firebase deploy --only hosting:yanbrain-admindash",
    "deploy:website": "npm run build:website && firebase deploy --only hosting:yanbrainserver",
    "deploy:functions": "firebase deploy --only functions",
    "lint": "npm run lint --workspaces --if-present"
  },
  "keywords": [
    "firebase",
    "license-management",
    "saas",
    "nextjs"
  ],
  "author": "YanBrain",
  "license": "YanBrain",
  "dependencies": {
    "@radix-ui/colors": "^3.0.0",
    "@radix-ui/react-scroll-area": "^1.2.10"
  }
}
