# Firebase Configuration (NEXT_PUBLIC_ prefix required by Next.js for client-side access)
NEXT_PUBLIC_FIREBASE_API_KEY=YOUR_FIREBASE_API_KEY
NEXT_PUBLIC_FIREBASE_PROJECT_ID=yanbrainserver
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=yanbrainserver.firebaseapp.com
NEXT_PUBLIC_CLOUD_FUNCTIONS_URL=https://us-central1-yanbrainserver.cloudfunctions.net/api

# NextAuth Configuration - REQUIRED for authentication
NEXTAUTH_SECRET=YOUR_SECRET_HERE_GENERATE_WITH_openssl_rand_base64_32
NEXTAUTH_URL=http://localhost:3000

# Firebase Admin SDK - REQUIRED for server-side admin operations
# Get these from: Firebase Console > Project Settings > Service Accounts > Generate New Private Key
FIREBASE_PROJECT_ID=yanbrainserver
FIREBASE_CLIENT_EMAIL=YOUR_SERVICE_ACCOUNT_EMAIL
FIREBASE_PRIVATE_KEY="YOUR_PRIVATE_KEY_HERE"
