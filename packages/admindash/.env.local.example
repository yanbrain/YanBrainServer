# Local Development Environment Variables
# Copy this file to .env.local and fill in your values

# NextAuth Configuration
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=CHANGE_THIS_TO_RANDOM_SECRET_MINIMUM_32_CHARS

# Firebase Configuration
NEXT_PUBLIC_FIREBASE_API_KEY=YOUR_FIREBASE_API_KEY
NEXT_PUBLIC_CLOUD_FUNCTIONS_URL=http://localhost:5001/yanbrain/us-central1/api

# Firebase Admin SDK (Server-side only - DO NOT EXPOSE TO CLIENT)
FIREBASE_PROJECT_ID=yanbrain
FIREBASE_CLIENT_EMAIL=YOUR_SERVICE_ACCOUNT_EMAIL
FIREBASE_PRIVATE_KEY="YOUR_PRIVATE_KEY_HERE"
